#!/bin/bash
bt=$(pamixer --get-default-sink | awk 'NR==2{print $5}')
if [ "$bt" = "Analog" ];
then
        icon="/home/llawliet/.local/share/icons/fontawesome/volume-high.svg"
else
	icon="/home/llawliet/.local/share/icons/fontawesome/headphones.svg"
fi
function send_notification() {
	volume=$(pamixer --get-volume)
	dunstify -a "changevolume" -u low -r "9993" -h int:value:"$volume" -i $icon "Volume: ${volume}%" -t 2000
}

case $1 in
up)
	# Set the volume on (if it was muted)
	pamixer -u
	pamixer -i 5
	send_notification $1
	;;
down)
	pamixer -u
	pamixer -d 5 --allow-boost
	send_notification $1
	;;
mute)
	pamixer -t
	if $(pamixer --get-mute); then
		dunstify -i /home/llawliet/.local/share/icons/fontawesome/volume-x.svg -a "changevolume" -t 2000 -r 9993 -u low "Volume Muted"
	else
		send_notification up
	fi
	;;
esac
